<div class="site">
  <div class="container">
    <div class="row">
      <% @bots.each do |bot| %>
        <div class="col-sm-6 col-lg-4">
          <div class="bot-card text-center">
            <div class="bot-card-channel">
              <%= bot.channel %>
            </div>
            <% if bot.boss_game %>
              <div class="bot-card-avatar">
                <img src="<%= boss_image(bot.boss_game) %>" id="bot-card-boss-avatar" alt="boss avatar">
              </div>
              <div class="bot-card-infos">
                <p>boss name: <%= bot.boss_game.name %></p>
                <p>boss hp: <%= "#{bot.boss_game.current_hp}/#{bot.boss_game.max_hp}" %></p>
                <p>boss shield: <%= "#{bot.boss_game.shield}/#{bot.boss_game.max_hp}" %></p>
                <p>saved at: <%= bot.boss_game.saved_at %></p>
              </div>
            <% else %>
              <div class="bot-card-avatar"></div>
              <div class="bot-card-infos"></div>
            <% end %>
            <%= link_to "", bot_path(bot, token: bot.token), class: 'bot-card-link' %>
            <%= link_to bot_path(bot), class: 'bot-card-delete', method: :delete do %>
              <i class="fa fa-remove"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
