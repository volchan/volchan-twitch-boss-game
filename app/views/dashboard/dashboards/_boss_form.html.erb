<div class="row">
  <div class="col">
    <%= simple_form_for [:dashboard, @bot.boss] do |f| %>
      <div class="row">
        <div class="col">
          <%= f.input :name, input_html: { class: 'form-control-sm' } %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.input :current_hp, input_html: { class: 'form-control-sm' } %>
        </div>
        <div class="col">
          <%= f.input :max_hp, input_html: { class: 'form-control-sm' } %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.input :current_shield, input_html: { class: 'form-control-sm' } %>
        </div>
        <div class="col">
          <%= f.input :max_shield, input_html: { class: 'form-control-sm' } %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.button :submit, 'Update boss', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
