.navbar-wagon
  / Logo
  = link_to root_path, class: "navbar-wagon-brand" do
    %p home
  / Right Navigation
  .navbar-wagon-right.hidden-xs.hidden-sm
    - if user_signed_in?
      / Links when logged in
      = link_to "Dashboard", dashboard_root_path, class: "navbar-wagon-item navbar-wagon-link"
      / Avatar with dropdown menu
      .navbar-wagon-item
        .dropdown
          = image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown"
          %ul.dropdown-menu.dropdown-menu-right.navbar-wagon-dropdown-menu
            %li
              = link_to "#" do
                %i.fa.fa-user
                = t(".profile", default: "Profile")
            %li
              = link_to "#" do
                %i.fa.fa-home
                = t(".profile", default: "Home")
            %li
              = link_to destroy_user_session_path, method: :delete do
                %i.fa.fa-sign-out
                = t(".sign_out", default: "Log out")
    - else
      / Login link (when logged out)
      = link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"
  / Dropdown list appearing on mobile only
  .navbar-wagon-item.hidden-md.hidden-lg
    .dropdown
      %i.fa.fa-bars.dropdown-toggle{"data-toggle" => "dropdown"}
      %ul.dropdown-menu.dropdown-menu-right.navbar-wagon-dropdown-menu
        %li
          %a{:href => "#"} Some mobile link
        %li
          %a{:href => "#"} Other one
        %li
          %a{:href => "#"} Other one
