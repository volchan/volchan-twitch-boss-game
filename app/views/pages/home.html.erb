<div class="container">
  <div class="row">
    <% @bots.each do |bot| %>
      <div class="col-xs-6 col-xs-offset-3 col-sm-4 text-center">
        <h3><%= bot.name %></h3>
        <p>
          <%= bot.channel %>
          <span>
            <%= link_to bot, method: :delete do %>
              <i class="fa fa-remove"></i>
            <% end %>
          </span>
        </p>
      </div>
    <% end %>
  </div>
</div>
